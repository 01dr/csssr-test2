extends /blocks/layout/layout

include /blocks/page/page

include /blocks/header/header
include /blocks/logo/logo
include /blocks/title/title
include /blocks/stamp/stamp

include /blocks/main/main
include /blocks/main/__section/main__section

include /blocks/input-group/input-group

block head
	- var pageTitle = 'Aidar Ibatullin - CSSSR';

block content
	+page
		+header
			+logo
			+title
			+stamp
		+main
			+main__section
				+input-group('Полное ФИО', 'text', 'Ибатуллин Айдар Маратович')
				+input-group('Год рождения', 'number', '1993')
				+input-group('Место жительства', 'text', 'Октябрьский / Казань')
				+input-group('Скайп', 'text', '- это лучший файлообменник')
				+input-group('Почта', 'email', 'amazing.space.invader@gmail.com')
			+main__section('Расскажите о себе чекбоксами', 'Отметьте чекбоксами пункты, которые соответствуют вашим скиллам. Кстати, отсутствие опыта не означает, что у вас меньше шансов стать одним из наших товарищей. Это означает, что вы будете получать те задачи, с которыми гарантировано будете справляться.')
				div массив чекбоксов
			+main__section('Уровень владения JavaScript')
				div слайдер
			+main__section('Расскажите о себе словами', 'Напишите пару предложений, чем вас привлекла наша вакансия и чего вы ожидаете от работы в CSSSR. Кстати, будет здорово, если при нехватке места для текста строки будут добавляться автоматически.')
				div тексэреа
			+main__section('Какие у вас планы на будущее?', 'Этот ответ ни на что не повлияет. Не беда, если в будущем ваши планы поменяются.')
				div радио
			+main__section
				div дата заполнения
