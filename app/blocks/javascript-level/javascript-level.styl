.javascript-level
	&__slider
		position relative
		padding-top 23px

		.noUi
			&-base
				position relative
				width 100%
				height 6px
				background-image url('../images/line.png')
				background-position 0 -26px
				transform translate3d(0, 0, 0)

			&-origin
				position absolute
				width 0
				height 0

			&-handle
				sprite $slider_triangle
				position relative
				top -15px
				left -8px

			&-pips
				position relative
				top -2px
				width 100%
				height 60px

			&-marker
				position absolute
				top 0
				width 2px
				height 10px
				background-color $primary-font-color

				&-first
				&-last
					height 24px

				&-first
					margin-left 0

				&-last
					margin-left -2px

			&-value
				position absolute
				top -5px
				margin-left -4px
				padding-top 32px
				max-width 170px
				font-family $primary-font-family
				font-size 13px
				font-weight 700
				line-height 1.5
				cursor pointer
				color $primary-font-color

				&-first
				&-last
					margin-left 0

				&:last-child
					transform translateX(-95%)
					width 145px

@media (max-width 700px)
	.javascript-level
		margin-top 30px
		display block

		&__slider
			padding 0

			.noUi
				&-base
					padding-left 22px
					width 6px
					height 200px
					background-image url('../images/line-v.png')
					background-position 46px 0

				&-handle
					top -8px
					left -22px
					transform rotate(-90deg)

				&-pips
					position absolute
					left 18px
					width 24px
					height 200px

				&-marker
					left 0
					width 10px
					height 2px

					&-first
					&-last
						width 24px

					&-first
						margin-top 2px

				&-value
					left 40px
					margin-top -9px
					margin-left 0
					padding 0
					width 200px

					&-first
						margin-top -7px

					&:last-child
						transform none
