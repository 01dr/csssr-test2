.javascript-level
	&__slider
		position relative
		padding-top 20px

		.noUi
			&-base
				position relative
				width 100%
				height 6px
				background-image url('../images/line.png')
				background-position 0 -26px
				transform translate3d(0, 0, 0)

			&-origin
				position absolute
				width 0
				height 0

			&-handle
				position relative
				top -15px
				left -9px
				sprite $slider_triangle

			&-pips
				position relative
				top -2px
				width 100%
				height 60px

				&:before
				&:after
					position absolute
					top 0
					width 2px
					height 24px
					content ''
					background-color $primary-font-color

				&:before
					left 0

				&:after
					right 0

			&-marker
				position absolute
				top 0
				margin-left -2px
				width 2px
				height 10px
				background-color $primary-font-color

				&:first-child
					display none

			&-value-large
				position absolute
				top -30px
				left 0
				padding-top 58px
				max-width 170px
				font-size 13px
				font-weight 700
				cursor pointer
				color $primary-font-color

				&:last-child
					transform translateX(-100%)
					width 145px
