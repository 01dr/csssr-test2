.input-group
	margin-bottom 5px

	display flex
	align-items flex-end

	&_short
		width 50%

	&__label
		position relative
		top -3px

		margin-right 18px

		display block
		float left

		font-family $primary-font-family
		font-size 22.44px
		font-weight 700
		white-space nowrap

		color $primary-font-color

	&__input
		padding 15px 15px 8px

		display inline-block
		float right

		width 100%

		font-family $secondary-font-family
		font-size 29px
		font-weight 100
		line-height 1.2

		background-color transparent
		background-image url('../images/line.png')
		background-position 0px 26px
		border none
		outline none
