.radio-group
	display inline-block
	position relative
	cursor pointer
	margin-right 20px

	&__radio
		position absolute
		left -9999px

	&__label
		position relative
		padding-left 35px
		font-family 'PT Sans'
		font-size 21px
		font-weight 700
		user-select none
		display inline-block

		&:before
			content ''
			sprite $radio_body
			position absolute
			top -4px
			left 0

		&:after
			content ''
			sprite $radio_dot
			position absolute
			left 8px
			top 4px
			opacity 0
			color $primary-font-color
			transform scale(2)
			transition .2s ease all;

	&__radio:checked + &__label:after
		opacity 1
		transform scale(1)
