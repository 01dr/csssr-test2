.radio-group
	display inline-block
	position relative
	cursor pointer

	&__radio
		position absolute
		left -9999px

	&__label
		position relative
		padding-left 33px
		font-family $primary-font-family
		font-size 20px
		font-weight 700
		user-select none
		display inline-block

		&:before
			content ''
			sprite $radio_body
			position absolute
			top -4px
			left -1px

		&:after
			content ''
			sprite $radio_dot
			position absolute
			left 7px
			top 4px
			opacity 0
			color $primary-font-color
			transform scale(2)
			transition .2s ease all;

	&__radio:checked + &__label:after
		opacity 1
		transform scale(1)
