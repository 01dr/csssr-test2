.checkbox-group
	position relative
	cursor pointer

	&__checkbox
		position absolute
		left -9999px

	&__label
		position relative
		padding-left 28px
		font-family 'PT Sans'
		font-size 21px
		font-weight 700
		user-select none
		display inline-block

		&:before
			content ''
			sprite $checkbox_body
			position absolute
			top 2px
			left 0

		&:after
			content ''
			sprite $checkbox_check
			position absolute
			left 2px
			top 2px
			opacity 0
			color $primary-font-color
			transform scale(2)
			transition .2s ease all

	&__checkbox:checked + &__label:after
		opacity 1
		transform scale(1)
